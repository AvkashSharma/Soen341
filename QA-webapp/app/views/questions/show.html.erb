
<div class="container">
<head>
		<h1> <%= @question.title %> </h1>
</head>
<hr>
<br>

<body>
	<div class="container">
		<div class="well well-lg">
		<p> <%= @question.text %> </p>
		<br>

		<div class="question_actions">
		<br>
		<%= if @question.belongs_to(current_user) 
				link_to "Edit", edit_question_path(@question), class: "btn btn-primary"
			end %>

		<div id="mytext" style="margin-top: 10px">
		<%= if @question.belongs_to(current_user)
				button_to 'Delete', question_path(@question), method: :delete, data: { confirm: 'Are you sure?' }, 
				class: 'btn-sm btn-danger'
			end %>
				</div>
			</br>
		</div>
	</div>
	</div>

	<!--CSS code to change the style of the lines-->
	<style> 
		hr{
			width: 100%;
			color: #000000;
			height: 3px;
		}
	</style>

	<hr> 
		<%= render 'answers/answer' %>

		<div id="mytext" style="margin-top: 68px"> <!--bottom margin in CSS coding-->
		<%= render 'answers/form' %>
	</div>

	<div id="mytext" style="margin-top: 50px"> <!--bottom margin in CSS coding-->
		<div id="mytext" style="margin-bottom: 65px">
		<%= link_to "Return to main page", questions_path, :class => 'btn btn-primary'%>
	</div>
</div>
</body>
</div>



